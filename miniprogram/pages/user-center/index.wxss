.page_container {
  background-color: #f5f5f5;
  height: 100vh;
  font-family: PingFang SC;
}

.top_bg {
  height: 120rpx;
}

.main_content {
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  height: calc(100vh - 120rpx);
  position: relative;
}

.userinfo_container {
  display: flex;
  gap: 80rpx;
  align-items: center;
  gap: 20rpx;
  position: absolute;
  top: -30rpx;
  padding: 0rpx 60rpx;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  /* background-color: #e5e5e5; */
  border-radius: 50%;
  transform: scale(1.8);
}

.username {
  color: #333;
  font-size: 32rpx;
  margin-top: 20rpx;
  color: rgba(0, 0, 0, 0.9);
  max-width: 200rpx;
}

.settings_container {
  position: relative;
  top: 150rpx;
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.setting_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
  font-size: 28rpx;
}

.left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.contact-button {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
  padding-left: 0rpx;
  margin: 0;
  width: 400rpx;
  font-weight: 400;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.9);
  line-height: 56rpx;
  text-align: left;
}

.button-hover {
  background-color: #fff;
}

.setting_icon {
  width: 40rpx;
  height: 40rpx;
}

.setting_text {
  color: rgba(0, 0, 0, 0.9);
}

.arrow_icon {
  width: 30rpx;
  height: 30rpx;
}

.user-bg {
  min-height: 100vh;
  background: #d2e7c6;
  padding-bottom: 32rpx;
  position: relative;
}
.user-header {
  width: 100vw;
  height: 8vh;
  min-height: 80rpx;
  max-height: 120rpx;
  background: #6bbf59;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  box-sizing: border-box;
}
.user-header-logo {
  height: 50rpx;
  width: 150rpx;
}
.user-header-icons {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.user-header-icon {
  width: 36rpx;
  height: 36rpx;
}
.user-main-bg-wrap {
  width: 92vw;
  margin: 0 auto;
  margin-top: 3vh;
  height: 33vh;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 24rpx #b6e2b6;
  position: relative;
  background: #fff;
}
.user-main-bg {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}
.user-card {
  background: #fff;
  border-radius: 24rpx;
  margin: 0 24rpx 24rpx 24rpx;
  box-shadow: 0 4rpx 16rpx #b6e2b6;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
}
.user-info-card {
  flex-direction: row;
  height: 8vh;
  min-height: 70rpx;
  max-height: 110rpx;
  width: 80vw;
  margin: -4vh auto 0 auto;
  z-index: 2;
  position: relative;
  justify-content: flex-start;
  box-shadow: 0 4rpx 16rpx #b6e2b6;
}
.user-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  /* background: #f0f0f0; */
}
.user-nickname {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}
.user-balance-card {
  flex-direction: row;
  justify-content: space-around;
  height: 8vh;
  min-height: 70rpx;
  max-height: 110rpx;
  width: 80vw;
  margin: 24rpx auto 0 auto;
}
.user-balance-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  justify-content: center;
}
.user-balance-icon {
  width: 48rpx;
  height: 48rpx;
  /* border-radius: 50%; */
  /* background: #f0f0f0; */
  margin-bottom: 8rpx;
}
.user-balance-label {
  font-size: 24rpx;
  color: #444;
}
.user-list-card {
  flex-direction: column;
  padding: 0;
  width: 88vw;
  margin: 32rpx auto 0 auto;
}
.user-list-item {
  font-size: 28rpx;
  color: #333;
  padding: 32rpx 32rpx;
  border-bottom: 1rpx solid #eaeaea;
}
.user-list-item:last-child {
  border-bottom: none;
}
